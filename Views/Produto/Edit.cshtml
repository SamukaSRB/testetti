@model SCX.Models.Produto;
<button type="button" class="btnVoltar" id="btnVoltar"><a asp-action="Index" asp-controller="Home">Voltar</a></button>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
<h1 class="jumbotron "> Editar Produto <i class="far fa-edit"></i>

</h1><br>
<hr>
<form asp-action="Edit" asp-controller="Produto">
    <input type="text" id="pnome" name="Nome" placeholder="Nome"  value = "@Html.DisplayFor(Model=> Model.Nome)" > 
    <input type="text" id="pdescricao" name="Descricao" placeholder="Descrição" value = "@Html.DisplayFor(Model=> Model.Descricao)">  
    <input type= "text" id="pcategoria"   name= "Categoria" placeholder="Categoria"value = "@Html.DisplayFor(Model=> Model.Categoria)">
    <input type="text" id="pprecodevenda" name="Preco" onkeyup="maskIt(this,event,'###.###.###,##',true,{pre:'R$'})" placeholder="Preco" value = "@Html.DisplayFor(Model=> Model.Preco)">
   
   
   
    <button type="submit" class="btnSalvar" >Salvar</button>
</form>